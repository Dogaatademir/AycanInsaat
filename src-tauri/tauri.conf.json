{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Aycan İnşaat",
  "version": "1.1.1",
  "identifier": "com.aycan.insaat",

  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5174",
    "beforeDevCommand": "",
    "beforeBuildCommand": ""
  },

  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Aycan İnşaat",
        "width": 1000,
        "height": 720,
        "resizable": true,
        "fullscreen": false,
        "devtools": true
      }
    ],
    "security": { "csp": null }
  },

  "bundle": {
    "active": true,
    "targets": ["nsis", "dmg"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
